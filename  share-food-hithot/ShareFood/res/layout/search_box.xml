<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/search_box"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginTop="10dip"
				android:layout_marginBottom="10dip" android:background="@color/white">
			<RelativeLayout
				android:id="@+id/search_panel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true" android:paddingTop="2dp">
			<ImageView
				android:id="@+id/search_box_img"
				android:layout_width="fill_parent"
				android:layout_height="35dip"
				android:src="@drawable/search_box"
				android:scaleType="fitXY" android:layout_centerVertical="true"/>
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="8dip"
				android:layout_alignParentLeft="true"
				android:src="@drawable/searchicon" android:paddingTop="1dp"/>
			<EditText
				android:id="@+id/search_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="30dip"
				android:paddingRight="58dip"
				android:layout_centerVertical="true"
				android:singleLine="true"
				android:hint="Search"
				android:background="#00000000" />
			<Button
				android:id="@+id/search_cancel_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dip"
				android:layout_marginTop="5dip"
				android:layout_marginRight="2dip"
				android:layout_marginBottom="5dip"
				android:text="Cancel"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:textSize="11sp"
				android:textColor="@color/header_blue"
				android:background="@drawable/btn_silver_states"
				android:visibility="gone"
			/>
			</RelativeLayout>
			
</RelativeLayout>
				